<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="0"
        android:textSize="55sp"
        android:textColor="@color/white"
        android:gravity="center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/gray_btn"
            android:text="C"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/btn_negate"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/gray_btn"
            android:text="+/-"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_pointer"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/gray_btn"
            android:text="%"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/btn_div"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:enabled="true"
            android:background="@drawable/selector_btn_click_bg"
            android:text="รท"
            android:textColor="@drawable/selector_btn_click_text_color"
            android:textSize="40sp"/>


        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/darkgray_btn"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="45sp"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/darkgray_btn"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="45sp"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/darkgray_btn"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="45sp"/>

        <Button
            android:id="@+id/btn_multi"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:enabled="true"
            android:background="@drawable/selector_btn_click_bg"
            android:text="ร"
            android:textColor="@drawable/selector_btn_click_text_color"
            android:textSize="45sp"/>


        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/darkgray_btn"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="45sp"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/darkgray_btn"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="45sp"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/darkgray_btn"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="45sp"/>


        <Button
            android:id="@+id/btn_sub"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:enabled="true"
            android:background="@drawable/selector_btn_click_bg"
            android:text="-"
            android:textColor="@drawable/selector_btn_click_text_color"
            android:textSize="45sp"/>


        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/darkgray_btn"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="45sp"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/darkgray_btn"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="45sp"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/darkgray_btn"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="45sp"/>


        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:enabled="true"
            android:background="@drawable/selector_btn_click_bg"
            android:text="+"
            android:textColor="@drawable/selector_btn_click_text_color"
            android:textSize="45sp"/>



        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:background="@drawable/btn_0"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="45sp"/>

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="@drawable/darkgray_btn"
            android:text="."
            android:textColor="@color/white"
            android:textSize="45sp"/>


        <Button
            android:id="@+id/btn_eql"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:enabled="true"
            android:background="@drawable/selector_btn_click_bg"
            android:text="="
            android:textColor="@drawable/selector_btn_click_text_color"
            android:textSize="45sp"/>




    </GridLayout>


</LinearLayout>